{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [],
    "jsx": "react",
    "noEmit": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*",
  ]
}
